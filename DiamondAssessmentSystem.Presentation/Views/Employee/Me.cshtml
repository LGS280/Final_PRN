@model DiamondAssessmentSystem.Application.DTO.EmployeeDto

@{
    ViewData["Title"] = "My Employee Profile";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="container my-5">
    <div class="d-flex justify-content-center">
        <div class="card shadow rounded-4 p-4" style="width: 100%; max-width: 800px;">
            <div class="row g-4 align-items-center">
                <!-- Avatar & Basic Info -->
                <div class="col-md-4 text-center">
                    <i class="bi bi-person-badge-fill text-secondary" style="font-size: 100px;"></i>
                    @* <h5 class="mt-3">@($"{Model.FirstName} {Model.LastName}")</h5> *@
                    <h5 class="mt-3"> @Model.UserName</h5>
                    <p class="text-muted mb-1"><i class="bi bi-envelope-fill me-1"></i> @Model.Email</p>
                    @* <p class="text-muted"><i class="bi bi-telephone-fill me-1"></i> @Model.Phone</p> *@
                </div>

                <!-- Details -->
                <div class="col-md-8">
                    <div class="row g-3">
                        @* <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-hash me-1"></i>Employee ID
                                </div>
                                <div>@Model.EmployeeId</div>
                            </div>
                        </div> *@

                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-gender-ambiguous me-1"></i>Gender
                                </div>
                                <div>@(string.IsNullOrWhiteSpace(Model.Gender) ? "Not updated yet" : Model.Gender)</div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-telephone-fill me-1"></i>PhoneNumber
                                </div>
                                <div>@(!string.IsNullOrWhiteSpace(Model.Gender) ? $"{Model.Phone} " : "Not updated yet")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
</div>
