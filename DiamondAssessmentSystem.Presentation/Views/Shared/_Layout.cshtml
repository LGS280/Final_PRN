@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity

@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diamond Assessment</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat.css" />
</head>
<body class="h-screen flex flex-col">

    <!-- Header/Navbar -->
    <header class="bg-white shadow sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
            <!-- Logo -->
            <a href="/" class="text-2xl font-extrabold text-blue-600 tracking-tight hover:opacity-90">
                💎 DiamondSys
            </a>


            <!-- Desktop Nav -->
            <nav class="desktop-nav">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                @{
                    var authResult = await AuthorizationService.AuthorizeAsync(User, "AllUsersPolicy");
                    if (!User.Identity.IsAuthenticated)
                    {
                        <ul class="nav-list">
                            <li class="nav-item">
                                <!-- Already have Home link above -->
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <ul class="nav-list admin-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Customers">Manage Customers</a>
                                <a class="nav-link" asp-controller="Admin" asp-action="Employees">Manage Employees</a>
                                <a class="nav-link" asp-controller="Admin" asp-action="CreateAccount">Create Employee Account</a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Employee"))
                    {
                        <ul class="nav-list employee-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="Me">My Profile</a>
                                <a class="nav-link" asp-controller="Certificate" asp-action="Management">Certificate</a>
                                <a class="nav-link" asp-controller="ServicePrice" asp-action="Index">Service</a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Customer"))
                    {
                        <ul class="nav-list customer-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Certificate" asp-action="Personal">Certificate</a>
                                <a class="nav-link" asp-controller="Request" asp-action="Index">Request</a>
                                <a class="nav-link" asp-controller="Order" asp-action="Index">Order</a>
                                <a class="nav-link" asp-controller="Customer" asp-action="Me">My Profile</a>
                                <a class="nav-link" asp-controller="Consultant" asp-action="Dashboard">🧑‍💼 Chat (Consultant)</a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Consultant"))
                    {
                        <ul class="nav-list consultant-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Result" asp-action="Index">Result</a>
                                <a class="nav-link" asp-controller="Customer" asp-action="Me">My Profile</a>
                                <a class="nav-link" asp-controller="Consultant" asp-action="Dashboard">🧑‍💼 Chat (Consultant)</a>
                            </li>
                        </ul>
                    }
                }

                <!-- ✅ Chat access -->
                @*<a class="text-gray-700 hover:text-blue-600" asp-controller="Customer" asp-action="Home">💬 Chat (Customer)</a>
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Consultant" asp-action="Dashboard">🧑‍💼 Chat (Consultant)</a>*@

                @*
                <!-- Auth & Admin -->
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Auth" asp-action="Login">Login</a>
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Auth" asp-action="RegisterCustomer">Register</a>
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Admin" asp-action="Customers">Manage Customers</a>
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Admin" asp-action="Employees">Manage Employees</a>
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Admin" asp-action="CreateAccount">Create Employee Account</a> *@
            </nav>

            @inject IHttpContextAccessor HttpContextAccessor
            @{
                var username = HttpContextAccessor.HttpContext?.User?.Identity?.Name;
            }

            <!-- Right: Logged in user -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="flex items-center space-x-2">
                    <img src="https://i.pravatar.cc/32?u=@username" class="w-8 h-8 rounded-full border" />
                    <span class="text-sm font-medium text-gray-700">@username</span>
                    <a asp-controller="Auth" asp-action="Logout"
                       class="text-red-600 hover:underline text-sm ml-2">Logout</a>
                </div>
            }
            else
            {
                <a class="text-gray-700 hover:text-blue-600" asp-controller="Auth" asp-action="Login">Login</a>
            }

            <!-- Mobile Nav Toggle -->
            <div class="md:hidden">
                <button id="mobile-menu-btn" class="text-gray-700 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
            <div class="space-y-2 text-sm font-medium">
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Home" asp-action="Index">Home</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Blog" asp-action="Index">Blog</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Certificate" asp-action="Management">Certificate</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Customer" asp-action="Me">Customer</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Employee" asp-action="Me">Employee</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Request" asp-action="Index">Request</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Order" asp-action="Index">Order</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Result" asp-action="Index">Result</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="ServicePrice" asp-action="Index">Service</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Account" asp-action="Index">Account</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Auth" asp-action="Login">Login</a>
                <a class="block text-gray-700 hover:text-blue-600" asp-controller="Auth" asp-action="RegisterCustomer">Register</a>
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 overflow-y-auto">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t py-2 text-sm text-gray-500">
        <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
            <p>&copy; 2025 Diamond Assessment System</p>
            <a asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600">Privacy</a>
        </div>
    </footer>

    <!-- Tailwind & Script -->
    <script>
        const btn = document.getElementById("mobile-menu-btn");
        const menu = document.getElementById("mobile-menu");
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>