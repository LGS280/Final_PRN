@model DiamondAssessmentSystem.Application.DTO.ServicePriceCreateDto
@{
    ViewData["Title"] = "Create Service Price";
}

<div class="max-w-3xl mx-auto px-6 py-10 bg-white shadow-xl rounded-xl border border-gray-200">
    <h1 class="text-3xl font-bold text-blue-700 mb-8 flex items-center space-x-2">
        <span>➕</span><span>@ViewData["Title"]</span>
    </h1>

    <form asp-action="Create" method="post" class="space-y-6" novalidate>
        <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-600 px-4 py-2 rounded text-sm"></div>

        <div>
            <label asp-for="ServiceType" class="block text-sm font-medium text-gray-700">Service Type</label>
            <input asp-for="ServiceType" maxlength="100"
                   class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="ServiceType" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Price" class="block text-sm font-medium text-gray-700">Price</label>
            <input asp-for="Price" type="number" step="0.01" min="0" max="999999"
                   class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Price" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
            <input asp-for="Description" maxlength="500"
                   class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Description" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Duration" class="block text-sm font-medium text-gray-700">Duration (Days)</label>
            <input asp-for="Duration" type="number" min="1" max="365"
                   class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Duration" class="text-sm text-red-500"></span>
        </div>

        <div>
            <label asp-for="Status" class="block text-sm font-medium text-gray-700">Status</label>
            <select asp-for="Status"
                    class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                <option value="">-- Select Status --</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-sm text-red-500"></span>
        </div>

        <div class="flex items-center justify-between pt-4">
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2 rounded shadow">
                Create
            </button>
            <a asp-action="Index"
               class="text-sm text-gray-500 hover:text-blue-600 transition">← Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
