@model DiamondAssessmentSystem.Application.DTO.ServicePriceDto

@{
    ViewData["Title"] = "Service Details";
}

<div class="max-w-3xl mx-auto p-6 bg-white shadow rounded">
    <h1 class="text-2xl font-bold mb-4 text-blue-700">🔍 @ViewData["Title"]</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <div><strong>ID:</strong> @Model.ServiceId</div>
        <div><strong>Type:</strong> @Model.ServiceType</div>
        <div><strong>Price:</strong> @Model.Price.ToString("C")</div>
        <div><strong>Description:</strong> @Model.Description</div>
        <div><strong>Duration (days):</strong> @Model.Duration</div>
        <div><strong>Employee:</strong> @Model.EmployeeId</div>
        <div>
            <strong>Status:</strong>
            <span class="@(Model.Status == "Active" ? "text-green-600" : "text-gray-500")">@Model.Status</span>
        </div>
    </div>
    <div class="mt-6 flex gap-4">
        <a asp-action="Edit" asp-route-id="@Model.ServiceId" class="text-yellow-600 hover:underline">✏️ Edit</a>
        <a asp-action="Index" class="text-blue-600 hover:underline">⬅️ Back to List</a>
    </div>
</div>
