@model DiamondAssessmentSystem.Application.DTO.CustomerUpdateDtoVer1

@{
    ViewData["Title"] = "Edit Profile";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<hr />
@if (ViewData.ModelState[string.Empty]?.Errors.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState[string.Empty].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="EditCustomerVer1" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="UserId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3 row align-items-center">
                <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label asp-for="IdCard" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="IdCard" class="form-control" />
                    <span asp-validation-for="IdCard" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label asp-for="UnitName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="UnitName" class="form-control" />
                    <span asp-validation-for="UnitName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label asp-for="TaxCode" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="TaxCode" class="form-control" />
                    <span asp-validation-for="TaxCode" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Me" class="btn btn-secondary">Back to Profile</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
