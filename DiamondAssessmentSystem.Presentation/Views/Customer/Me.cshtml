@model DiamondAssessmentSystem.Application.DTO.CustomerDto

@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="container my-5">
    <div class="d-flex justify-content-center">
        <div class="card shadow rounded-4 p-4" style="width: 100%; max-width: 800px;">
            <div class="row g-4 align-items-center">
                <!-- Avatar & Basic -->
                <div class="col-md-4 text-center">
                    <i class="bi bi-person-circle text-secondary" style="font-size: 100px;"></i>
                    @* <h5 class="mt-3">@($"{Model.FirstName} {Model.LastName}")</h5> *@
                    <h5 class="mt-3"> @Model.UserName</h5>
                    <p class="text-muted mb-1"><i class="bi bi-envelope-fill me-1"></i> @Model.Email</p>
                </div>

                <!-- Info -->
                <div class="col-md-8">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-credit-card-2-front me-1"></i>ID Card
                                </div>
                                <div>@(string.IsNullOrWhiteSpace(Model.IdCard) ? "Not updated yet" : Model.IdCard)</div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-geo-alt-fill me-1"></i>Address
                                </div>
                                <div>@(string.IsNullOrWhiteSpace(Model.Address) ? "Not updated yet" : Model.Address)</div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-building me-1"></i>Unit Name
                                </div>
                                <div>@(string.IsNullOrWhiteSpace(Model.UnitName) ? "Not updated yet" : Model.UnitName)</div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="border rounded-3 p-3 bg-light h-100">
                                <div class="fw-bold mb-1 text-secondary">
                                    <i class="bi bi-receipt-cutoff me-1"></i>Tax Code
                                </div>
                                <div>@(string.IsNullOrWhiteSpace(Model.TaxCode) ? "Not updated yet" : Model.TaxCode)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="EditCustomerVer1" class="btn btn-primary">Edit Profile</a>

            </div>
        </div>
    </div>
</div>