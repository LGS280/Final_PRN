@model int 

<form asp-controller="ChatMessages" asp-action="SendMessage" asp-route-conversationId="@Model" method="post" class="flex items-center space-x-2" enctype="multipart/form-data">
    <input type="text" name="Message" placeholder="Type a message..." class="flex-1 p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />

    <input type="file" name="File" accept="image/*,application/pdf" class="hidden" id="file-upload" />
    <label for="file-upload" class="bg-green-500 text-white p-2 rounded-md hover:bg-green-600 cursor-pointer">
        📎
    </label>

    <button type="submit" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600">
        Send
    </button>
</form>
