@model DiamondAssessmentSystem.Application.DTO.RequestCreateDto
@{
    ViewData["Title"] = "Edit Request";
    var services = ViewBag.Services as List<SelectListItem>;
}

<div class="max-w-xl mx-auto py-10 px-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">📝 Edit Request</h1>

    <form asp-action="Edit" asp-route-id="@ViewBag.Id" method="post" class="space-y-6 bg-white p-6 rounded-xl shadow-md border">
        <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

        <div>
            <label asp-for="ServiceId" class="block font-semibold text-gray-700">Service</label>
            <select asp-for="ServiceId" asp-items="services" class="w-full mt-1 border-gray-300 rounded-md shadow-sm">
                <option value="">-- Select Service --</option>
            </select>
            <span asp-validation-for="ServiceId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="RequestType" class="block font-semibold text-gray-700">Request Type</label>
            <input asp-for="RequestType" class="w-full mt-1 border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="RequestType" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between">
            <button type="submit" class="bg-yellow-500 text-white px-5 py-2 rounded-lg hover:bg-yellow-600">✔️ Update</button>
            <a asp-action="My" class="text-sm text-blue-600 hover:underline">← Back to My Requests</a>
        </div>
    </form>
</div>
