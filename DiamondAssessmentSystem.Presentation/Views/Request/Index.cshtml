@model IEnumerable<DiamondAssessmentSystem.Application.DTO.RequestDto>
@{
    ViewData["Title"] = "All Requests";
}

<div class="max-w-7xl mx-auto px-4 py-10">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold text-gray-800">📋 All Requests</h1>
        <div class="space-x-2">
        </div>
    </div>

    <div class="overflow-x-auto shadow border rounded-lg bg-white">
        <table class="min-w-full divide-y divide-gray-200 text-sm">
            <thead class="bg-gray-100 text-gray-700 uppercase text-xs font-semibold">
                <tr>
                    <th class="px-4 py-3 text-left">ID</th>
                    <th class="px-4 py-3 text-left">Form Type</th>
                    <th class="px-4 py-3 text-left">Request Date</th>
                    <th class="px-4 py-3 text-left">Customer ID</th>
                    <th class="px-4 py-3 text-left">Service</th>
                    <th class="px-4 py-3 text-left">Type</th>
                    <th class="px-4 py-3 text-left">Employee</th>
                    <th class="px-4 py-3 text-left">Status</th>
                    <th class="px-4 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 text-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-4 py-3 font-mono">@item.RequestId</td>
                        <td class="px-4 py-3">@item.FormType</td>
                        <td class="px-4 py-3">@item.RequestDate.ToString("dd MMM yyyy")</td>
                        @* <td class="px-4 py-3">@item.CustomerId</td> *@
                        <td class="px-4 py-3">
                            <div class="font-medium">@item.ServiceType</div>
                            <div class="text-sm text-gray-500">@item.ServicePrice?.ToString("C")</div>
                        </td>
                        <td class="px-4 py-3">@item.RequestType</td>
                        @* <td class="px-4 py-3">@item.EmployeeId</td> *@
                        <td class="px-4 py-3">
                            <span class="px-2 py-1 rounded-full text-xs font-semibold @GetStatusClass(item.Status)">
                                @item.Status
                            </span>
                        </td>
                        <td class="px-4 py-3 text-center">
                            <div class="flex justify-center gap-2">
                                <a asp-action="Details" asp-route-id="@item.RequestId" class="text-blue-600 hover:underline text-sm">Details</a>

                                @if (item.Status == "Draft")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.RequestId" class="text-yellow-600 hover:underline text-sm">Edit</a>

                                    <form asp-action="Cancel" method="post" asp-route-id="@item.RequestId" onsubmit="return confirm('Are you sure you want to cancel this request?');">
                                        <button type="submit" class="text-red-500 hover:underline text-sm">Cancel</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-gray-400 text-sm">Locked</span>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetStatusClass(string? status)
    {
        return status switch
        {
            "Draft" => "bg-yellow-100 text-yellow-800",
            "Pending" => "bg-blue-100 text-blue-800",
            "Completed" => "bg-green-100 text-green-800",
            "Canceled" => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-700"
        };
    }
}
