@model DiamondAssessmentSystem.Application.DTO.ResultCreateDto

@{
    ViewData["Title"] = "Create Result";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="max-w-3xl mx-auto py-10 px-6 bg-white rounded-xl shadow-lg border">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post" class="space-y-8">
        @* Hidden fields *@
        <input type="hidden" asp-for="RequestId" />

        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

        <div>
            <label asp-for="DiamondOrigin" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="DiamondOrigin" type="text" placeholder="Enter Diamond Origin"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="DiamondOrigin" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Shape" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Shape" type="text" placeholder="Enter Shape"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Shape" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Measurements" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Measurements" type="text" placeholder="Enter Measurements"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Measurements" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="CaratWeight" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="CaratWeight" type="number" step="0.01" min="0"
                   placeholder="Enter Carat Weight"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="CaratWeight" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Color" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Color" type="text" placeholder="Enter Color"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Color" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Clarity" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Clarity" type="text" placeholder="Enter Clarity"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Clarity" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Cut" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Cut" type="text" placeholder="Enter Cut"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Cut" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Proportions" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Proportions" type="text" placeholder="Enter Proportions (optional)"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Proportions" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Polish" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Polish" type="text" placeholder="Enter Polish (optional)"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Polish" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Symmetry" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Symmetry" type="text" placeholder="Enter Symmetry (optional)"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Symmetry" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Fluorescence" class="block text-gray-700 font-semibold mb-1"></label>
            <input asp-for="Fluorescence" type="text" placeholder="Enter Fluorescence (optional)"
                   class="w-full px-4 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Fluorescence" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Status" class="block font-semibold text-gray-700 mb-1">Status</label>
            <select asp-for="Status" id="Status"
                    class="w-full mt-1 border border-gray-300 rounded-md shadow-sm px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">-- Select Status --</option>
                <option value="Pending">Pending</option>
                <option value="Completed">Completed</option>
                <option value="Rejected">Rejected</option>
            </select>
            <span asp-validation-for="Status" class="text-red-500 text-sm mt-1 block"></span>
        </div>


        <div class="flex justify-between items-center pt-6 border-t">
            <a asp-action="Index" class="text-blue-600 hover:underline font-semibold">← Back to List</a>
            <button type="submit"
                    class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition font-semibold shadow-md">
                Create
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

