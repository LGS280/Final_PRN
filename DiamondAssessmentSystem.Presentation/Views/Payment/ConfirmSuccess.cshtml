@{
    ViewData["Title"] = "Thanh toán thành công";
    var orderId = ViewData["OrderId"]?.ToString();
}

<div class="max-w-xl mx-auto py-12 px-4 text-center">
    <h2 class="text-3xl font-bold text-green-600 mb-4">✅ Thanh toán thành công</h2>
    <p class="text-gray-700">Cảm ơn bạn đã sử dụng dịch vụ.</p>

    @if (!string.IsNullOrEmpty(orderId))
    {
        <p class="text-gray-600 mt-2">Mã đơn hàng: <span class="font-semibold text-gray-800">#@orderId</span></p>
    }

    <div class="mt-6 space-x-4">
        <a asp-controller="Order" asp-action="MyOrder"
           class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
            Xem đơn hàng
        </a>
        <a asp-controller="Home" asp-action="Index"
           class="inline-block px-4 py-2 bg-gray-100 text-gray-800 rounded hover:bg-gray-200 transition">
            Trang chủ
        </a>
    </div>
</div>
