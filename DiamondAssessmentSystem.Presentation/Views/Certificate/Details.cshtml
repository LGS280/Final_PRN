@model DiamondAssessmentSystem.Application.DTO.CertificateDto

@{
    ViewData["Title"] = "Certificate Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Certificate ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CertificateId)</dd>
        <dt class="col-sm-2">Result ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ResultId)</dd>
        <dt class="col-sm-2">Certificate Number</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CertificateNumber)</dd>
        <dt class="col-sm-2">Issue Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IssueDate)</dd>
        <dt class="col-sm-2">Approved By</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApprovedBy)</dd>
        <dt class="col-sm-2">Approved Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ApprovedDate)</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
        <!-- Add data for specific properties of certificates-->
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.CertificateId">Edit</a> |
    <a asp-action="Management">Back to List</a>
</div>