@model DiamondAssessmentSystem.Application.DTO.CustomerUpdateDtoV2
@{
    ViewData["Title"] = "Edit Customer";
    var popupType = ViewBag.PopupType as string;
    var popupMessage = ViewBag.PopupMessage as string;
}

<div class="max-w-xl mx-auto py-10">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h2>

    <!-- Modal Notification -->
    <div class="modal fade" id="popupModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-xl shadow">
                <div class="modal-header @(popupType == "success" ? "bg-success" : "bg-danger") text-white">
                    <h5 class="modal-title">Notification</h5>
                </div>
                <div class="modal-body text-center text-gray-700">
                    @Html.Raw(popupMessage)
                </div>
                <div class="modal-footer justify-content-center space-x-2">
                    <a href="@Url.Action("Customers", "Admin")" class="btn btn-success">Back to List</a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Stay Here</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <form asp-action="EditCustomer" method="post" class="bg-white p-8 rounded-2xl shadow-xl space-y-6 border">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="UserName" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="FirstName" class="block font-medium text-sm text-gray-700 mb-1">First Name</label>
                <input asp-for="FirstName" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring focus:ring-blue-300" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="LastName" class="block font-medium text-sm text-gray-700 mb-1">Last Name</label>
                <input asp-for="LastName" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring focus:ring-blue-300" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div>
            <label asp-for="Email" class="block font-medium text-sm text-gray-700 mb-1">Email</label>
            <input asp-for="Email" class="w-full border border-gray-300 rounded-md bg-gray-100 px-3 py-2" readonly />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Phone" class="block font-medium text-sm text-gray-700 mb-1">Phone</label>
            <input asp-for="Phone" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring focus:ring-blue-300" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Gender" class="block font-medium text-sm text-gray-700 mb-1">Gender</label>
            <select asp-for="Gender" class="w-full border border-gray-300 rounded-md px-3 py-2 bg-white focus:ring focus:ring-blue-300">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="IdCard" class="block font-medium text-sm text-gray-700 mb-1">ID Card</label>
            <input asp-for="IdCard" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="IdCard" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Address" class="block font-medium text-sm text-gray-700 mb-1">Address</label>
            <input asp-for="Address" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="UnitName" class="block font-medium text-sm text-gray-700 mb-1">Unit Name</label>
            <input asp-for="UnitName" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="UnitName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="TaxCode" class="block font-medium text-sm text-gray-700 mb-1">Tax Code</label>
            <input asp-for="TaxCode" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="TaxCode" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition">
            Save Changes
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (!string.IsNullOrEmpty(popupMessage))
    {
        <script>
            window.addEventListener('DOMContentLoaded', () => {
                const modal = new bootstrap.Modal(document.getElementById('popupModal'));
                modal.show();
            });
        </script>
    }
}
