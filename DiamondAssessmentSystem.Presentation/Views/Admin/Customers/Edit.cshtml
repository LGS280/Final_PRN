@model DiamondAssessmentSystem.Application.DTO.CustomerUpdateDto
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-xl p-6 mt-8">
    <h1 class="text-xl font-bold text-gray-800 mb-4">Edit Customer</h1>

    <form asp-action="EditCustomer" method="post" class="space-y-5">
        <input type="hidden" asp-for="UserId" />

        <div>
            <label asp-for="Customer.FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
            <input asp-for="Customer.FirstName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.FirstName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
            <input asp-for="Customer.LastName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.LastName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.Phone" class="block text-sm font-medium text-gray-700">Phone</label>
            <input asp-for="Customer.Phone" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.Phone" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.Gender" class="block text-sm font-medium text-gray-700">Gender</label>
            <select asp-for="Customer.Gender" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Customer.Gender" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.UnitName" class="block text-sm font-medium text-gray-700">Unit Name</label>
            <input asp-for="Customer.UnitName" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.UnitName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.TaxCode" class="block text-sm font-medium text-gray-700">Tax Code</label>
            <input asp-for="Customer.TaxCode" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.TaxCode" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.IdCard" class="block text-sm font-medium text-gray-700">ID Card</label>
            <input asp-for="Customer.IdCard" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.IdCard" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Customer.Address" class="block text-sm font-medium text-gray-700">Address</label>
            <input asp-for="Customer.Address" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
            <span asp-validation-for="Customer.Address" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-end space-x-3">
            <a asp-action="Customers" class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300">Cancel</a>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
