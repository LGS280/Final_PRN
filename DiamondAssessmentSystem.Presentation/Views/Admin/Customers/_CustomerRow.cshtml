@model DiamondAssessmentSystem.Application.DTO.CustomerDto

<tr class="hover:bg-gray-50 transition">
    <td class="px-4 py-3">@($"{Model.FirstName} {Model.LastName}")</td>
    <td class="px-4 py-3">@Model.Email</td>
    <td class="px-4 py-3">@Model.Phone</td>
    <td class="px-4 py-3">@Model.Address</td>
    <td class="px-4 py-3">
        @if (Model.Acc?.Status == "Inactive")
        {
            <span class="text-red-500 font-medium">Inactive</span>
        }
        else
        {
            <span class="text-green-600 font-medium">Active</span>
        }
    </td>
    <td class="px-4 py-3 space-x-3">
        @if (!string.IsNullOrEmpty(Model.Acc?.UserId))
        {
            <a asp-action="CustomerDetails" asp-route-id="@Model.Acc.UserId" class="text-blue-600 hover:underline">Details</a>
            <a asp-action="EditCustomer" asp-route-id="@Model.Acc.UserId" class="text-yellow-600 hover:underline">Edit</a>

            @if (Model.Acc?.Status == "Inactive")
            {
                <button onclick="showActivate('@Model.Acc.UserId')" class="text-green-600 hover:underline">Activate</button>
            }
            else
            {
                <button onclick="showDeactivate('@Model.Acc.UserId')" class="text-red-600 hover:underline">Deactivate</button>
            }
        }
        else
        {
            <span class="text-gray-400 italic">No Account</span>
        }
    </td>
</tr>
