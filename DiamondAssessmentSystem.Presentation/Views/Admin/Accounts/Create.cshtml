@using DiamondAssessmentSystem.Application.DTO
@model RegisterEmployeesDto
@{
    ViewData["Title"] = "Create Employee Account";
}

<div class="max-w-xl mx-auto py-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h2>

    <form asp-action="CreateAccount" method="post" class="space-y-5 bg-white p-6 shadow rounded-xl">
        <div>
            <label asp-for="Username" class="block font-medium">Username</label>
            <input asp-for="Username" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block font-medium">Email</label>
            <input asp-for="Email" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block font-medium">Password</label>
            <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block font-medium">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Role" class="block font-medium">Role</label>
            <select asp-for="Role" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="">-- Select Role --</option>
                <option>Admin</option>
                <option>Staff</option>
            </select>
            <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700">
            Create Account
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
