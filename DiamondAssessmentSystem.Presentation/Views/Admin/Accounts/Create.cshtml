@using DiamondAssessmentSystem.Application.DTO
@model RegisterEmployeesDto
@{
    ViewData["Title"] = "Create Employee Account";
}

<div class="max-w-xl mx-auto py-10">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h2>

    @* TempData Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-md mb-4 text-sm text-center">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-md mb-4 text-sm text-center">
            @TempData["Error"]
        </div>
    }

    <form asp-action="CreateAccount" method="post" class="space-y-5 bg-white p-8 shadow-xl rounded-2xl border">
        <div>
            <label asp-for="Username" class="block text-sm font-semibold text-gray-700 mb-1">Username</label>
            <input asp-for="Username" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
            <input asp-for="Email" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
            <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-gray-700 mb-1">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Role" class="block text-sm font-semibold text-gray-700 mb-1">Role</label>
            <select asp-for="Role" class="w-full border border-gray-300 rounded-md px-4 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">-- Select Role --</option>
                <option>Consultant</option>
                <option>Assessor</option>
                <option>Manager</option>
            </select>
            <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-150">
            Create Account
        </button>
    </form>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
