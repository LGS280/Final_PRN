@model DiamondAssessmentSystem.Application.DTO.BlogDto

@{
    ViewData["Title"] = "Delete Blog";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Blog ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BlogId)</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Content)</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BlogId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>